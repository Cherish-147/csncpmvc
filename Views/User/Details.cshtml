@model sales.DAL.产品表

@{
    ViewBag.Title = "Product Details";
}

<h2>Product Details</h2>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Product ID</dt>
        <dd>@Model.goods_id</dd>

        <dt>Product Name</dt>
        <dd>@Model.goods_name</dd>

        <dt>Category</dt>
        <dd>@Model.classifcation_id</dd>

        <dt>Supplier</dt>
        <dd>@Model.supplier_id</dd>

        <dt>Price</dt>
        <dd>@Model.unit_price</dd>

        <dt>Stock Quantity</dt>
        <dd>@Model.stock_quantiy</dd>

        <dt>Product Image</dt>
        <dd>
            @if (!string.IsNullOrEmpty(Model.picture))
            {
                <img src="@Url.Action("GetImage", "Image", new { filePath = Model.picture })" alt="@Model.goods_name" class="img-responsive" style="max-width: 300px; max-height: 300px;" />
            }
            else
            {
                <span>No image available</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a href="@Url.Action("Index")" class="btn btn-primary">Back to List</a>
</div>

<style>
    .dl-horizontal dt {
        float: left;
        width: 150px;
        clear: left;
        text-align: right;
        font-weight: bold;
        margin-right: 10px;
    }

    .dl-horizontal dd {
        margin-left: 160px;
        margin-bottom: 10px;
    }

    .img-responsive {
        display: block;
        max-width: 100%;
        height: auto;
    }

    .btn-primary {
        margin-top: 20px;
    }
</style>
